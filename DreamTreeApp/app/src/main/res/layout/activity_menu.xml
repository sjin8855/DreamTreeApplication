<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="7">

    <Button
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="16dp"
        android:id = "@+id/LoginButton"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:onClick="onLoginButtonClicked"
        android:text="로그인"
        android:layout_gravity="right"
        android:background="#ffb82b"/>
    <TextView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <ImageButton
            android:layout_weight="1"
            android:id = "@+id/MapButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onMapButtonClicked"
            android:src="@drawable/menu_map"
            android:scaleType="fitXY"
            android:padding="0sp"
            />
        <ImageButton
            android:layout_weight="1"
            android:id = "@+id/BudgetButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onBudgetButtonClicked"
            android:background="@drawable/menu_budget"
            android:scaleType="fitXY"
            android:padding="0sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">

        <ImageButton
            android:layout_weight="5"
            android:id = "@+id/CommunityButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/menu_community"
            android:scaleType="fitXY"
            android:padding="0sp"
            android:onClick="onButtonCommunityClicked"/>
        <Button
            android:layout_weight="5"
            android:id = "@+id/SettingButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onSettingButtonClicked"
            android:background="@drawable/menu_mypage"
            android:scaleType="fitXY"
            android:padding="0sp"
            />
    </LinearLayout>

    <TextView
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>